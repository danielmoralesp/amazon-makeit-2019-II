<div class="container">
	<h1 class="mb-5">Create New Product</h1>
	<div class="row">
		

		<%= form_for @product do |f| %>
			<div class="form-group">
				<%= f.label "Product Name" %>
				<%= f.text_field :name, class: "form-control", placeholder: "Ingrese el nombre del producto" %>
			</div>

			<div class="form-group">
				<%= f.label "Description" %>
				<%= f.text_area :description, class: "form-control", placeholder: "Ingrese la descripcion del producto" %>
			</div>

			<div class="form-group">
				<%= f.label "Price" %>
				<%= f.number_field :price, class: "form-control", placeholder: "Ingrese el precio del producto" %>
			</div>

			<div class="form-group">
				<%= f.submit "Enviar", class: "btn btn-primary" %>
			</div>

		<% end %>
	</div>
</div>

